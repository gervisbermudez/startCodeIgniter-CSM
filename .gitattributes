# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source code
*.php text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.html text eol=lf
*.htm text eol=lf
*.xml text eol=lf
*.sql text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
.env* text eol=lf
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
LICENSE text eol=lf
README text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose*.yml text eol=lf
.dockerignore text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.mp3 binary
*.mp4 binary
*.mov binary
*.avi binary

# Archive generated files for diffs
*.lock linguist-generated=true
composer.lock linguist-generated=true
package-lock.json linguist-generated=true
*.min.js linguist-generated=true
*.min.css linguist-generated=true

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore
*.md export-ignore
docs/ export-ignore
tests/ export-ignore
.github/ export-ignore
